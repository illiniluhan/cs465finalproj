<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/content_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_navigation"
        android:gravity="center_horizontal">

        <!-- Article Information -->
        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/article_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A brirf analysis and description of the chapter text: An analysis of the chapter reveals a dramatic shift in the protagonist's mindset. The conclusion brings a surprising twist that leaves the reader questioning previous events. As the tension builds, the author's choice of words emphasizes the internal struggle faced by the character. The ending is both satisfying and thought-provoking, offering closure while still leaving room for interpretation. The use of symbolism is subtle yet effective, reinforcing the themes explored throughout the story. Overall, the ending delivers a powerful conclusion that resonates long after the last page is turned.
 "
            android:textSize="16sp"
            android:paddingBottom="16dp" />


        <!-- Progress Visualization -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Progress"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progress_overall"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:max="100" />

        <TextView
            android:id="@+id/progress_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Reading Mode -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Reading Mode"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/reading_mode_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/normal_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal Mode" />
            <RadioButton
                android:id="@+id/dark_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark Mode" />
            <RadioButton
                android:id="@+id/focus_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus Mode" />
        </RadioGroup>

    </LinearLayout>

    <!-- Navigation -->
    <RadioGroup
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- Read Button -->
        <RadioButton
            android:id="@+id/navigation_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_button_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="Read" />

        <!-- Import Button -->
        <RadioButton
            android:id="@+id/navigation_import"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_button_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="Import" />

        <!-- Analysis Button -->
        <RadioButton
            android:id="@+id/navigation_analysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_button_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="Analysis" />

    </RadioGroup>

</RelativeLayout>
