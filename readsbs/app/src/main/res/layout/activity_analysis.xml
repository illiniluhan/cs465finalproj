<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/analysis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalysisActivity">

    <!-- Title: Read Overview -->
    <TextView
        android:id="@+id/title_read_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Overview"
        android:textSize="24sp"
        android:textColor="#1E90FF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- Chapter 1 Example -->
    <ImageView
        android:id="@+id/chapter_1_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/alarm_logo"
        app:layout_constraintTop_toBottomOf="@id/title_read_overview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chapter_1_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chapter 1 example"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/chapter_1_icon"
        app:layout_constraintStart_toEndOf="@id/chapter_1_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chapter_1_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estimated Reading Time: 15 min"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/chapter_1_title"
        app:layout_constraintStart_toEndOf="@id/chapter_1_icon"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Chapter 2 Example -->
    <ImageView
        android:id="@+id/chapter_2_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/alarm_logo"
        app:layout_constraintTop_toBottomOf="@id/chapter_1_time"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chapter_2_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chapter 2 example"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/chapter_2_icon"
        app:layout_constraintStart_toEndOf="@id/chapter_2_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chapter_2_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estimated Reading Time: 20 min"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/chapter_2_title"
        app:layout_constraintStart_toEndOf="@id/chapter_2_icon"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Chapter 3 Example -->
    <ImageView
        android:id="@+id/chapter_3_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/alarm_logo"
        app:layout_constraintTop_toBottomOf="@id/chapter_2_time"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chapter_3_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chapter 3 example"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/chapter_3_icon"
        app:layout_constraintStart_toEndOf="@id/chapter_3_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chapter_3_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estimated Reading Time: 10 min"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/chapter_3_title"
        app:layout_constraintStart_toEndOf="@id/chapter_3_icon"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Chapter 4 Example -->
    <ImageView
        android:id="@+id/chapter_4_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/alarm_logo"
        app:layout_constraintTop_toBottomOf="@id/chapter_3_time"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chapter_4_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chapter 4 example"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/chapter_4_icon"
        app:layout_constraintStart_toEndOf="@id/chapter_4_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chapter_4_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estimated Reading Time: 25 min"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/chapter_4_title"
        app:layout_constraintStart_toEndOf="@id/chapter_4_icon"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Chapter 5 Example -->
    <ImageView
        android:id="@+id/chapter_5_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/alarm_logo"
        app:layout_constraintTop_toBottomOf="@id/chapter_4_time"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chapter_5_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chapter 5 example"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/chapter_5_icon"
        app:layout_constraintStart_toEndOf="@id/chapter_5_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chapter_5_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estimated Reading Time: 30 min"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/chapter_5_title"
        app:layout_constraintStart_toEndOf="@id/chapter_5_icon"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Bottom Navigation -->
    <RadioGroup
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Read Button -->
        <RadioButton
            android:id="@+id/navigation_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_button_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="Read" />

        <!-- Import Button -->
        <RadioButton
            android:id="@+id/navigation_import"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_button_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="Import" />

        <!-- Analysis Button -->
        <RadioButton
            android:id="@+id/navigation_analysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_button_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="Analysis" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>


